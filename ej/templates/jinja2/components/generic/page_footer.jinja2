{% set up_transition = 'cross-fade' %}


{# Page footer with links and other information #}
{% macro page_footer(social_media_icons) %}
  <footer class="Footer">
      <div class="Footer-social">
        <ul class="Footer-icons">
          {% for icon in social_media_icons %}
            <li>icon.icon_tag(classes=['fa-facebook'])</li>
          {% endfor %}
        </ul>
        <ul class="Footer-icons">
            <li><i class="fab fa-facebook"></i></li>
            <li><i class="fab fa-twitter"></i></li>
            <li><i class="fab fa-whatsapp"></i></li>
            <li><i class="fab fa-telegram"></i></li>
        </ul>
        <div class="Footer-info">
          <p>Pequeno texto falando sobre o MDH e CPA</p>
        </div>
  </footer>
{% endmacro %}
