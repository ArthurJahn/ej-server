{% from 'components/page_header.jinja2' import page_header %}
{% from 'components/page_sidebar.jinja2' import sidebar %}
{% from 'components/page_footer.jinja2' import page_footer %}

{% set render_context = request.GET.render | default('all') %}
{% set render = render | default(render_context) %}


{% if render == 'all' %}
