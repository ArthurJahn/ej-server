<div class="DownloadLinkList">
    <span class="DownloadLinkList-title">{{ title|default(_('Downloads: ')) }}</span>
    <ul class="DownloadLinkList-links">
        {%- for format, name in formats -%}
            <li><a href="{{ url(view_name, kwargs={'conversation': conversation, 'format': format}) }}">{{ name }}</a></li>
        {% endfor %}
    </ul>
</div>
