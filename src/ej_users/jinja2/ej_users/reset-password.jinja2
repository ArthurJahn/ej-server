{% extends 'base.jinja2' %}
{% set title = _('Reset password') %}

{% block content %}
    <style>.Header-lowerNotLogged {
        display: none;
    }</style>

    <div class="Login">

        <h1>Forgot your password {{ user.name }}?</h1>

        <p>Enter your email address and we will send you a link to reset your password</p>

        <form method="post" class="Form">
            {{ csrf_input }}
            {{ form.as_p() }}
            <input type="submit" class="Button" value="{{ _('Send') }}" name="reset-password-form">
        </form>

    </div>
{% endblock %}
