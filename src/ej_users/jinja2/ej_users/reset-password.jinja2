{% extends 'base.jinja2' %}
{% set title = _('Reset password') %}
{% set text = _('Forgot your password') %}
{% set message = _('Enter your email address and we will send you a link to reset your password') %}
{% set message_err = _('The specified email address is not listed on your account.') %}
{% set message_success = _('Sent!') %}

{% block content %}
    <style>.Header-lowerNotLogged {
        display: none;
    }</style>

    <div class="Login">

        <h1> {{ text }}?</h1>
        <p>{{ message }}</p>

        {%if error%}
            <p style="color:red">{{ message_err }}</p>
        {%endif%}
        {%if success%}
            <p style="color:green">{{ message_success }}</p>
        {%endif%}

        <form method="post" class="Form">
            {{ csrf_input }}
            {{ form.as_p() }}
            <input type="submit" class="Button" value="{{ _('Send') }}" name="reset-password-form">
        </form>

    </div>
{% endblock %}
