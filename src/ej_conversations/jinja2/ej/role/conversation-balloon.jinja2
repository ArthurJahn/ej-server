<div class="conversation-balloon">
    <article>
        {{ span_icon(', '.join(tags)  if tags else _('Conversation'), 'tags', class_='text-7') }}
        <h1>{{ conversation.text }}</h1>
    </article>
    <div class="conversation-balloon__arrow"></div>
    {% if show_user_actions %}
        <div class="conversation-balloon__social">
            <span is-component="conversation:toggleFavorite"><i class="fa fa-star"></i>
                {%- if is_favorite %}{{ _("Unfavorite") }}{% else %}{{ _("Favorite") }}{% endif %}
            </span>
            <span is-component="conversation:share"><i class="fas fa-share-alt"></i>{{ _("Share") }}</span>
        </div>
    {% endif %}
</div>
