<div class="ConversationDetail">
    <div class="ConversationDetail-banner ConversationDetail--{{conversation.css_light_palette}}">
        <div class="ConversationTags"><i class="fa fa-tags"></i>
            {% if tags %}
              {{ ', '.join(tags) }}
            {% else %}
                {{ _("Tags") }}
            {% endif %}
        </div>
        <h1>{{ conversation.text }}</h1>
    </div>

    <div class="ConversationDetail-arrow ConversationDetail--{{conversation.css_text_palette}}"></div>
    <div class="ConversationDetail-social">
        {% if show_user_actions %}
            <form method="post" class="Favorite-conversation" id="Favorite-form">
                {{ csrf_input }}
                <input type="hidden" name="action" value="favorite">
                {% if is_favorite %}
                    <button type="submit" form="Favorite-form">
                        <i class="fa fa-star"></i>{{ _("Unfavorite") }}
                    </button>
                {% else %}
                    <button type="submit" form="Favorite-form">
                        <i class="far fa-star"></i> {{ _("Favorite") }}
                    </button>
                {% endif %}
            </form>
            <button onclick="webShare()" class="share-button">
                <i class="fas fa-share-alt"></i> {{ _("Share") }}
            </button>
        {% endif %}
    </div>
</div>
