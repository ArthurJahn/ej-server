<div class="CommentListItem">
    <div class="CommentListItem-header">
        <span class='label'><i class="fas fa-location-arrow"></i>{{ _('Opinion') }}</span>
        <span class='date'>{{ creation_date }}</span>
    </div>
    <div class="CommentListItem-content">{{ content }}</div>
    <ul class="CommentListItem-actions">
        <li class='agree'>
            <i class="fas fa-check"></i><span>{{ agree }}</span>
        </li>
        <li class="CommentListItem-skip">
            <i class="fas fa-arrow-right"></i><span>{{ skip }}</span>
        </li>
        <li class="CommentListItem-disagree">
            <i class="fas fa-times"></i><span>{{ disagree }}</span>
        </li>
    </ul>
    {{ comment|role('reject-reason') }}
</div>
