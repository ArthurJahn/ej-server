<div class="Comment Comment-status-{{ comment.status }}">
    <div class="Comment-metadata">
        <span>{{ _('by') }}: <b>{{ comment.author.name }}</b></span>
        <span class="date">{{ comment.created.strftime('%d-%m-%Y %Hh%M') }}</span>
    </div>
    <p>{{ comment.content }}</p>
    <form method="post">
        {{ csrf_input }}
        <input type="hidden" name="comment" value="{{ comment.id }}">
        <ul class="ConversationComment-actions">
            <li up-expand>
                <input type="submit" class="Button" name="vote" value="approve"/>
                <span>{{ _('Approve') }}</span>
            </li>
            <li up-expand>
                <input type="submit" class="Button" name="vote" value="disapprove"
                        onClick="var $r = $('#Comment-{{ comment.id }}-rejection_reason'); return $r.is(':visible') ? true : $r.show() && false"/>
                <span>{{ _('Disapprove') }}</span>
            </li>
        </ul>
        <div id="Comment-{{ comment.id }}-rejection_reason" class="Comment-rejection" style="display: none;">
            <h3>{{ _('Reason') }}</h3>
            <p>{{ _('The comment will receive your rejection reason') }}</p>
            <select name="rejection_reason" id="Comment-{{ comment.id }}-rejection_reason">
              <option value="incomplete_text">{{ _('Incomplete or incomprehensible text') }}</option>
              <option value="off_topic">{{ _('Off-topic') }}</option>
              <option value="offensive_language">{{ _('Offensive content or language') }}</option>
              <option value="duplicated_comment">{{ _('Duplicated content') }}</option>
              <option value="against_terms_of_service">{{ _('Violates terms of service of the platform') }}</option>
            </select>
            <input type="submit" class="Button" name="vote" value="disapprove"/>
        </div>
    </form>
</div>
