<div class="ConversationDetail">
    <div class="ConversationDetail-banner">
        <div class="ConversationTags"><i class="fa fa-tags"></i>
            {% if tags %}
              {{ (conversation.tags.all()[0]|string).title() }}
            {% else %}
                {{ _("Tags") }}
            {% endif %}
        </div>
        <h1>{{ conversation.text }}</h1>
        <ul class="ConversationDetail-statistics">
            <li><i class="fa fa-comment"></i> {{ gettext('%(comment_count)s comments', comment_count=comments_count) }}</li>
            <li><i class="fa fa-sliders-h"></i> {{ gettext('%(votes_count)s votes', votes_count=votes_count) }}</li>
            <li><i class="fa fa-star"></i> {{ gettext('%(favorite_count)s favorites', favorite_count=favorites_count) }} </li>
        </ul>
    </div>

    <div class="ConversationDetail-arrow"></div>
    <div class="ConversationDetail-social">
        {% if show_user_actions %}
            <form method="post" class="Favorite-conversation" id="Favorite-form">
                {{ csrf_input }}
                <input type="hidden" name="action" value="favorite">
                {% if is_favorite %}
                    <button type="submit" form="Favorite-form">
                        <i class="fa fa-star"></i>{{ _("Unfavorite") }}
                    </button>
                {% else %}
                    <button type="submit" form="Favorite-form">
                        <i class="far fa-star"></i> {{ _("Favorite") }}
                    </button>
                {% endif %}
            </form>
            <button class="share-button">
                <i class="fas fa-share-alt"></i> {{ _("Share") }}
            </button>
        {% endif %}
    </div>
</div>
