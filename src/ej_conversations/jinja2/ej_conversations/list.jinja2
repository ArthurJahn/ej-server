{% extends 'ej_conversations/base.jinja2' %}


{% block content %}
    <h1 class="h2 text-accent text-center margin-b3">{{ title }}</h1>
    <p class="measure text-center margin-xauto">{% trans %}{% endtrans %}</p>
    <div class="alternate-cards">
        {% for conversation in conversations %}
            <div class="margin-y3">{{ conversation|role('card') }}</div>
        {% endfor %}
    </div>
{% endblock %}
