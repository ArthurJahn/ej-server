{% extends 'ej_conversations/create.jinja2' %}


{% block form_content %}
    <p><a href="{{ conversation.get_absolute_url() }}"
          title="{{ _('Back (skip changes)') }}"
          class="lowercase bold text-brand">
        <i class="fa fa-chevron-left"></i>{% trans %}Back to conversation{% endtrans %}
    </a></p>

    <div class="measure margin-xauto">
        <h1 class="h2 text-accent text-center">{{ _('Edit conversation') }}</h1>

        {{ form.non_field_errors() }}
        {{ form.title.errors }}
        <label>{{ form.title.label }}{{ form.title }}</label>
        <legend>{{ form.title.help_text }}</legend>

        {% if can_publish %}
            {{ form.is_promoted.errors }}
            <label>{{ form.is_promoted }} {{ form.is_promoted.label }}</label>
            <legend>{{ form.is_promoted.help_text }}</legend>
        {% endif %}

        {{ form.is_hidden.errors }}
        <label>{{ form.is_hidden }} {{ form.is_hidden.label }}</label>
        <legend>{{ form.is_hidden.help_text }}</legend>

        <div class="margin-xauto margin-y3 text-center">
            <input class="is-primary" type="submit" value="{{ _('Save modifications') }}">
        </div>

        <h2 class="h3 text-accent text-center">{{ _('Other options') }}</h2>
        <ul>
            <li>
                <button class="is-clear" name="next" value="stereotypes">{{ _('Save and manage stereotypes') }}</button>
            </li>
            <li>
                <button class="is-clear" name="next" value="moderate">{{ _('Save and moderate comments') }}</button>
            </li>
        </ul>
    </div>
{% endblock %}
