{% extends 'base.jinja2' %}
{% block content %}
<div class="CommentPromote">
    {{ conversations|role('balloon') }}
    <div class="ConversationList-title">
       <h1>{{title}}</h1>
    {% for comment in comments %}
        {{ comment|role('promote') }}
    {% endfor %}
       <h1> {{form_title}}</h1>
        {{ conversations|role('promote-form', comment_content=comment_form) }}
    </div>
</div>
{% endblock %}