{% macro comment_list(comments, csrf_input = None, request = None) %}
    {% if comments | length >= 1 %}
        {% for comment in comments %}
            {% if request %}
                {{ comment|role('moderate', request=request) }}
            {% else %}
                {{ comment|role('moderate') }}
            {% endif %}
        {% endfor %}
    {% else %}
        <p>{{ _('No comments left') }}</p>
    {% endif %}
{% endmacro %}
