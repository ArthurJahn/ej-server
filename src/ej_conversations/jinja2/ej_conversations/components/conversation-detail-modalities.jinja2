{% from 'components/generic/modalities.jinja2' import modalities with context %}

{% macro modalicon(icons) %}
    {% for icon in icons %}
        <i class="fa {{ icon }}"></i>
    {% endfor %}
{% endmacro %}

{% macro modalimg(imgs) %}
    {% for img, class in imgs.items() %}
        <img class="{{ class }}" src="{{ img }}"></i>
    {% endfor %}
{% endmacro %}

