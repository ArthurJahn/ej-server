
{% macro modalities(title, ifimg, img, img2, img3, inc, inc2, inc3, content) %}
    <div id="modalities">
        <h3>{{title}}</h3>
        {% if img != "" %}
            <img {{ifimg}} src={{img}}/>
            {% if img2 != "" %}
                <img src={{img2}}/>
                {% if img3 != "" %}
                    <img src={{img3}}/>
                {% endif %}
            {% endif %}
        {% endif %}
        {% if inc != "" %}
            <i class="{{inc}}"></i>
            {% if inc2 != "" %}
                <i class="{{inc2}}"></i>
                {% if inc3 != "" %}
                    <i class="{{inc3}}"></i>
                {% endif %}
            {% endif %}
        {% endif %}
        <p>{{content}}</p>
    </div>
    <script>
        function showModalities() {
            var x = document.getElementById("modalities");
            x.className = "show";
        }
    </script>
{% endmacro %}